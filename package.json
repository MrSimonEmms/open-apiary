{
  "name": "open-apiary",
  "version": "0.0.0",
  "description": "Apiary management software",
  "author": "Simon Emms",
  "private": true,
  "license": "MIT",
  "main": "./server/main",
  "scripts": {
    "prebuild": "rimraf ./dist ./.nuxt",
    "build": "run-s compile:server compile:client",
    "postbuild": "run-s copy:nuxt copy:client copy:config",
    "compile:client": "cross-env mode=production nuxt build",
    "compile:server": "tsc -p ./server/tsconfig.build.json",
    "copy:client": "copyfiles -a \"client/**/*\" dist",
    "copy:config": "copyfiles nuxt.config.js package.json package-lock.json dist",
    "copy:nuxt": "copyfiles -a \".nuxt/**/*\" dist",
    "dev": "cross-env IS_NUXT_ENABLED=true nodemon",
    "dev:client": "nuxt",
    "dev:server": "nodemon",
    "lint": "run-s lint:client lint:server",
    "lint:client": "eslint --ext .ts,.js,.vue ./client",
    "lint:server": "eslint --ext .ts,.js ./server",
    "start": "node ./",
    "test": "run-s test:server",
    "test:server": "jest",
    "test:server:watch": "jest --watch",
    "test:server:cov": "jest --coverage",
    "test:server:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:server:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "node ./scripts/typeorm"
  },
  "dependencies": {
    "@nestjs/common": "^6.7.2",
    "@nestjs/config": "0.0.9",
    "@nestjs/core": "^6.7.2",
    "@nestjs/platform-express": "^6.7.2",
    "@nestjs/typeorm": "^6.2.0",
    "@nuxtjs/axios": "^5.9.2",
    "bcrypt": "^3.0.7",
    "jsonwebtoken": "^8.5.1",
    "ms": "^2.1.2",
    "mysql2": "^2.1.0",
    "nuxt": "^2.0.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.5.3",
    "typeorm": "^0.2.22",
    "vue-property-decorator": "^8.3.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^6.9.0",
    "@nestjs/schematics": "^6.7.0",
    "@nestjs/testing": "^6.7.1",
    "@nuxt/typescript-build": "^0.5.5",
    "@nuxtjs/eslint-config-typescript": "^1.0.0",
    "@nuxtjs/eslint-module": "^1.1.0",
    "@types/bcrypt": "^3.0.0",
    "@types/express": "^4.17.1",
    "@types/jest": "^24.0.18",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/ms": "^0.7.31",
    "@types/node": "^12.7.5",
    "@types/supertest": "^2.0.8",
    "copyfiles": "^2.1.1",
    "cross-env": "^6.0.3",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-typescript": "^6.3.1",
    "eslint-plugin-nuxt": "^0.5.0",
    "jest": "^24.9.0",
    "mkdirp": "^0.5.1",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "pug": "^2.0.4",
    "pug-plain-loader": "^1.0.0",
    "rimraf": "^3.0.0",
    "supertest": "^4.0.2",
    "ts-jest": "^24.1.0",
    "ts-loader": "^6.1.1",
    "ts-node": "^8.4.1",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^5.20.0",
    "typescript": "^3.6.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "server",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
